@using rentaCar.Models.Entities
@model IEnumerable<rentaCar.Models.Entities.rent>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
    WebGrid grid = new WebGrid(Model);
}

<div class="container">
    @grid.GetHtml(
        tableStyle: "table-bordered col-md-12 text-center",
        columns: grid.Columns(
                grid.Column("Id", "ID"),
                grid.Column("CarId", "Car ID"),
                grid.Column("CustomerId", "Customer ID"),
                grid.Column("Day", "Gün"),
                grid.Column("RentalDate", "Kiralama Tarihi"),
                grid.Column("ReturnDate", "Dönüş Tarihi"),
                grid.Column("Note", "Not"),
                grid.Column("Düzenle", format: @<text> <a href="/Rents/GetRent/@item.Id" class="btn btn-info">Düzenle</a> </text>),
grid.Column("Sil", format: @<text> <a href="/Rents/DeleteRent/@item.Id" class="btn btn-danger">Sil</a> </text>)
)
)
    <a href="/Rents/NewRent/" class="btn btn-success">Yeni Kiralama</a>


</div>


