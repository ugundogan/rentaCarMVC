@model rentaCar.Models.Entities.customers
@{
    ViewBag.Title = "GetCustomer";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (Html.BeginForm("EditCustomer", "Customers", FormMethod.Post))
{
    <div class="form-horizontal">
        <h4>MÜŞTERİ DÜZENLE</h4>
        <hr />
        <div class="form-group">
            <label class="control-label col-sm-2">Id</label>
            @*@Html.LabelFor(k => k.LicensePlate)*@
            <div class="col-sm-5">
                @Html.TextBoxFor(k => k.Id, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2">TC</label>
            @*@Html.LabelFor(k => k.LicensePlate)*@
            <div class="col-sm-5">
                @Html.TextBoxFor(k => k.IdentitiyNumber, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2">Ad Soyad</label>
            @*@Html.LabelFor(k => k.LicensePlate)*@
            <div class="col-sm-5">
                @Html.TextBoxFor(k => k.FullName, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2">Telefon</label>
            @*@Html.LabelFor(k => k.LicensePlate)*@
            <div class="col-sm-5">
                @Html.TextBoxFor(k => k.Phone, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2">Addres</label>
            @*@Html.LabelFor(k => k.LicensePlate)*@
            <div class="col-sm-5">
                @Html.TextBoxFor(k => k.Adress, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2">Mail</label>
            @*@Html.LabelFor(k => k.LicensePlate)*@
            <div class="col-sm-5">
                @Html.TextBoxFor(k => k.Mail, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2">Ehliyet No</label>
            @*@Html.LabelFor(k => k.LicensePlate)*@
            <div class="col-sm-5">
                @Html.TextBoxFor(k => k.DriverLicenseNo, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <button class="btn btn-warning">Güncelle</button>
        </div>
    </div>



}
